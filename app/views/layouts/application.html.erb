<!DOCTYPE html>
<html>
  <head>
    <title>InfinityFleetRentals</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
      <div class="container-fluid">
        <%= link_to root_path, class: 'navbar-brand' do %>
          <%= image_tag "/assets/pngwing.com.png" %>
        <% end %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto">
            <li class="nav-item active">
              <%= link_to "Find ships", ships_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Create Listing", ships_path, class: 'nav-link' %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item dropdown">
                <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                  <a class="dropdown-item" href="#">View my bookings</a>
                  <a class="dropdown-item" href="#">View my Listings</a>
                  <a class="dropdown-item" data-turbo-method="delete" href="<%= destroy_user_session_path %>">Log out</a>
                </div>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign In", new_user_session_path, class: "btn-flat-nav nav-link px-4" %>
              </li>
            <% end %>
            <!--li class="nav-item"-->
            <!--/li-->
          </ul>
        </div>
      </div>
    </div>
    <%= render "shared/flashes" %>
    <%= yield %>
  </body>
</html>
