<div class="banner">
  <section class="space">
    <div class="stars">
      <div class="stars-back"></div>
      <div class="stars-middle"></div>
      <div class="stars-front"></div>
    </div>
    <div class="rocket">
      <div class="fuselage">
        <div class="nose"></div>
        <div class="head">
          <span class="window"></span>
        </div>
        <div class="neck"></div>
        <div class="body"></div>
        <div class="reactor"></div>
        <div class="fire">
          <div class="spark1"></div>
          <div class="spark2"></div>
          <div class="spark3"></div>
          <div class="spark4"></div>
          <div class="spark5"></div>
          <div class="spark6"></div>
        </div>
      </div>
      <div class="left-fin"></div>
      <div class="left-fin-end"></div>
      <div class="right-fin"></div>
      <div class="right-fin-end"></div>
    </div>
  </section>
  <div class="content-overlay">
    <div class="container-banner">
      <h1>Infinity Fleet Rentals</h1>
      <p>Your Odyssey Among the Stars Begins Here!</p>
      <div class="search">
        <%= form_with url: ships_path, method: :get, class: "search" do %>
          <div class="search-bar-container">
            <%= text_field_tag :q,
        params[:q],
        class: "form-control rounded-start",
        placeholder: "Deathstar..."
    %>
            <%= number_field_tag :max_price,
        params[:max_price],
        class: "form-control",
        placeholder: "Max Price",
        min: 0
    %>
            <%= select_tag :min_rating,
        options_for_select((1..5).map { |n| [("★" * n + "☆" * (5 - n)).html_safe, n] }, params[:min_rating]),
        class: "form-control",
        prompt: "Min Rating"
    %>
            <%= number_field_tag :min_capacity,
        params[:min_capacity],
        class: "form-control rounded-end",
        placeholder: "Min Capacity",
        min: 0
    %>
          </div>
          <%= submit_tag "Search", class: 'btn btn-flat'  %>
        <% end %>
      </div>
    </div>
  </div>
</div>
