<div class="navbar"></div>
<div class="container">
<br>
<div style="font-size:40px"><center> <strong><%= @ship.name%></strong></h1>
</div>

<div class="big-display">
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://tinyurl.com/maybpsa3)">
  </div>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://tinyurl.com/5ypy83b9)">
  </div>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://tinyurl.com/59zd62tr)">
  </div>

</div>
<div class="box">
<div class="description">
  <h2>Description</h2>
  <p><%= @ship.description%></h1><p>
</div>
<div class="widget" data-controller="booking-price" data-booking-price-day-value="<%= @ship.price_per_day %>">
  <!--<div class='btn btn-primary' style="width:100%" disabled>Book Here</div>
    <br>-->
    <div >
      Price per day: $ <%= @ship.price_per_day %>
    </div>
    <%= simple_form_for [@ship, @booking] do |f| %>
    <%= f.input :start_date, as: :date, default: Date.tomorrow , html5: true, input_html: { data: { booking_price_target: "start" , action: "change->booking-price#pricing"  } }%>
    <%= f.input :end_date, as: :date, default: (Date.today + 8), html5: true, input_html: { data: { booking_price_target: "end" , action: "change->booking-price#pricing" } } %>
    <br>
    <div>Total price: $<span data-booking-price-target="total">0.00</span>
    </div>
    <%= f.submit 'Book', class: 'btn btn-info mt-2', style: "width:100%"  %>
  <% end %>
  <%= link_to "Home", ships_path, class: "btn btn-dark mt-3 mt-2", style: "width:100%" %>
  </div>
</div>
</div>
